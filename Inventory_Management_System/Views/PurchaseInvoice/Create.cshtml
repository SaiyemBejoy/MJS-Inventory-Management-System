
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Purchase Invoice</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Date")
                <br />
                <input type="date" id="datePicker" name="datePicker" class="form-control" />
            </div>
            <div class="col-md-6">
                @Html.Label("Suppliers")
                <br />
                @Html.DropDownList("Supplier", ViewBag.suppList as SelectList, new { @class = "form-control" })
            </div>
        </div>
    </div>



    <div class="container" style="margin-top:30px;">
        <table class="table table-hover table-bordered table-responsive table-striped">
            <tr>
                <th>Product</th>
                <th>Barcode</th>
                <th>Expiry</th>
                <th>No. Of Cartons</th>
                <th>Per Carton Quantity</th>
                <th>Buying Price</th>
            </tr>
            <tr>
                <td>@Html.Editor("ProductName", new { htmlAttributes = new { @class = "form-control" } })</td>
                <td>@Html.Editor("ProductBarcode", new { htmlAttributes = new { @class = "form-control" } })</td>
                <td><input type="date" id="exdatePicker" name="exdatePicker" class="form-control" /></td>
                <td>@Html.Editor("cartonTxt", new { htmlAttributes = new { @class = "form-control" } })</td>
                <td>@Html.Editor("piecesTxt", new { htmlAttributes = new { @class = "form-control" } })</td>
                <td>@Html.Editor("buyingTxt", new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
        </table>

        <input type="submit" value="ADD" class="btn btn-success btn-block center-block" />
    </div>

