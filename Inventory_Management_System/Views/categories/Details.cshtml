@model Inventory_Management_System.category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Category name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_name)
        </dd>

        <dt>
            @Html.DisplayName("Status")
        </dt>

        <dd>
            @{
                if (Model.cat_status == Convert.ToByte(1))
                {
                    <p>Active</p>
                }
                else if (Model.cat_status == Convert.ToByte(0))
                {
                    <p>Inactive</p>
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.cat_id }, new { @class = "btn btn-success" })
</p>
