@model Inventory_Management_System.category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Category name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_name)
        </dd>

        <dt>
            @Html.DisplayName("Status")
        </dt>

        <dd>
            @{
                if (Model.cat_status == Convert.ToByte(1))
                {
                    <p>Active</p>
                }
                else if (Model.cat_status == Convert.ToByte(0))
                {
                    <p>Inactive</p>
                }
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" }) |
    <input type="submit" value="Delete" class="btn btn-success" />
</div>
    }
</div>
